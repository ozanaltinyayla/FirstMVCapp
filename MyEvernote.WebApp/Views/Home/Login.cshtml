@using MyEvernote.Entities.ValueObjects
@model LoginViewModel

@{
    ViewBag.Title = "MyEvernote - Giriş Sayfası";
}

<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Giriş Ekranı </h1>
                </div>
                <div class="main-content">

                    @Html.ValidationSummary(false)

                    @if(ViewBag.SetLink!=null)
                    {
                        <a href="@ViewBag.SetLink" class="btn btn-primary">Aktif Et !</a>
                    }

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı Adınızı Giriniz..." })

                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifrenizi Giriniz..." ,type="password"})

                    </div>

                    <div class="form-group ">
                        <button href="#" type="submit" class="btn btn-danger btn-lg btn-block login-button">Giriş Yap</button>
                    </div>


                </div>
            </div>
        </div>
    </section>
}



